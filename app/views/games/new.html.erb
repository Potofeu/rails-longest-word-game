<div class="container">
  <h1>New game</h1>
  <ul>
    <% @letters.each do |letter| %>
    <li><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="answer" placeholder="Type your proposition here">
    <input type="hidden" name ="grid" value="<%= @letters.join %>">
    <input type="submit" value="Send">
  </form>
</div>
